<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="bndtools.core.cnfTemplates">
      <template
         id="bundle-hub"
         name="Bundle-Hub Configuration"
         doc="templateDocs/BundleHubConfig.xml"
         paths="templates/cnfs/bundlehub"
         priority="20"
         managed="ext/.*,plugins/.*"
         ignores="/cache/"
         version="0"
         category="AAA/Core"
      />
      <template
         id="jpm"
         name="JPM4J Configuration (Experimental)"
         doc="templateDocs/JpmConfig.xml"
         paths="templates/cnfs/jpm"
         priority="0"
         managed="ext/.*,plugins/.*"
         ignores="/cache/"
         version="10"
         category="AAA/Core"
      />
      <template
         id="corp"
         name="Behind Corporate Firewall Configuration"
         doc="templateDocs/CorporateConfig.xml"
         paths="templates/cnfs/corp"
         priority="15"
         managed="ext/.*,plugins/.*,build-template.xml,build.properties"
         ignores="/cache/"
         version="0"
         category="AAA/Core"
      />
      <template
         id="test"
         name="Testing bndtools"
         doc="templateDocs/TestConfig.xml"
         paths="templates/cnfs/test"
         priority="10"
         managed="ext/.*,plugins/.*,build-template.xml,build.properties"
         ignores="/cache/"
         version="10"
         category="AAA/Core"
      />
   </extension>

</plugin>
